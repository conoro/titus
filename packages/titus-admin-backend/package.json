{
  "name": "titus-admin-backend",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "The backend for the Titus project using fastify",
  "main": "lib/server.js",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "start:admin": "nodemon --config .nodemonrc index.js",
    "test": "jest --config .jest.json --coverage",
    "test:watch": "jest --config .jest.json --watch --verbose",
    "test:related": "jest --config .jest.json --onlyChanged"
  },
  "dependencies": {
    "auth0": "^2.30.0",
    "aws-sdk": "^2.793.0",
    "axios": "^0.21.0",
    "dotenv": "^8.2.0",
    "env-schema": "^2.0.1",
    "fastify": "^3.8.0",
    "fastify-auth": "^1.0.1",
    "fastify-auth0-verify": "^0.3.2",
    "fastify-autoload": "^3.3.1",
    "fastify-cors": "^4.1.0",
    "fastify-plugin": "^3.0.0",
    "fluent-schema": "^1.0.5",
    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^7.0.1",
    "mercurius": "^6.4.0",
    "nodemon": "^2.0.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nock": "^13.0.5",
    "prettier": "^2.1.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
